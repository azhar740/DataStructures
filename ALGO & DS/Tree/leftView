
void leftView(Node *root)
{
    if(root == NULL) return;
    queue<Node *> q;
    q.push(root);
    q.push(NULL);
    while( q.front()){
        Node *x = q.front();
        cout << x->data << " ";
        q.pop(); 
        while( x != NULL){
            if(x->left) q.push(x->left);
            if(x->right) q.push(x->right);
            x = q.front();
            q.pop();
        }
        q.push(NULL);
    }
  
}